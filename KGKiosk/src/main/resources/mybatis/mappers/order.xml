<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.order">
	<resultMap id="orderResult" type="orderVO">
		<result property="orderKey" column="orderKey" />
        <result property="id" column="id" />
        <result property="foodName" column="foodName" />
        <result property="orderPrice" column="orderPrice" />
        <result property="orderType" column="orderType" />
        <result property="orderBY" column="orderBY" />
        <result property="orderSale" column="orderSale" />
	</resultMap> 

	<select id="selectAllOrderList" resultMap="orderResult">
      <![CDATA[
         select * from orderTable order by orderKey
      ]]>
	</select>
	
	<select id="selectAllPersonOrderList" parameterType="orderVO" resultMap="orderResult">
      <![CDATA[
         select * from orderTable 
         where id=#{id} 
         order by orderKey
      ]]>
	</select>
	
	<select id="selectSingleOrder" parameterType="orderVO" resultType="orderVO">
      <![CDATA[
         select * from orderTable 
         where orderKey=#{orderKey}
      ]]>
	</select>
    
  <insert id="insertOrder"  parameterType="orderVO">
		<![CDATA[
		 insert into orderTable(orderKey, id, foodName, orderPrice, orderType, orderBY, orderSale)
		 values(#{orderKey}, #{id}, #{foodName}, #{orderPrice}, #{orderType}, #{orderBY}, #{orderSale})
		]]>      
	</insert>
     
   <delete id="deleteOrder"  parameterType="orderVO">
	<![CDATA[
	   delete from orderTable
	   where
	   orderKey=#{orderKey}
	]]>      
  </delete>
  
</mapper>