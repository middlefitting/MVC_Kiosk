<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.complaintPost">
	<resultMap id="complaintResult" type="complaintPostVO">
		<result property="complaintPostKey" column="complaintPostKey" />
        <result property="complaintPostId" column="complaintPostId" />
        <result property="complaintPostTitle" column="complaintPostTitle" />
        <result property="complaintPostBody" column="complaintPostBody" />
        <result property="complaintWriteDate" column="complaintWriteDate" />
	</resultMap> 

	<select id="selectAllComplaintPostList" resultMap="complaintResult">
      <![CDATA[
         select * from complaintPost order by complaintWriteDate	 	
      ]]>
	</select>
	
	<select id="selectSingleComplaintPost" parameterType="String" resultType="complaintPostVO">
      <![CDATA[
         select * from complaintPost 
         where complaintPostKey=#{complaintPostKey}	 	
      ]]>
	</select>
    
  <insert id="insertComplaintPost"  parameterType="complaintPostVO">
		<![CDATA[
		 insert into complaintPost(complaintPostKey, complaintPostId, complaintPostTitle, complaintPostBody)
		 values(#{complaintPostKey}, #{complaintPostId}, #{complaintPostTitle}, #{complaintPostBody})
		]]>      
	</insert>
	
   
   <update id="updateComplaintPost"  parameterType="complaintPostVO">
     <![CDATA[
	     update complaintPost
	     set complaintPostTitle=#{complaintPostTitle}, complaintPostBody=#{complaintPostBody}, complaintWriteDate=#{complaintWriteDate}
	     where
	     complaintPostKey=#{complaintPostKey}
      ]]>      
   </update> 
     
   <delete id="deleteComplaintPost"  parameterType="String">
	<![CDATA[
	   delete from complaintPost
	   where
	   complaintPostKey=#{complaintPostKey}
	]]>      
  </delete>

</mapper>